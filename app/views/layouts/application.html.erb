<!DOCTYPE html>
<html>
<head>
  <title>Garnet</title>
  <meta name="viewport" content="width=device-width">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.png' %>
</head>
<body>
  <nav class="site-wide">
    <h1><%= link_to root_path do %><span class="logo">GA</span>RNET<% end %></h1>
    <span class="separate"></span>
    <% if signed_in? %>
      <%= link_to current_user.username, user_path(current_user) %>
      <%= link_to "sign out", sign_out_path %>
    <% else %>
      <%= link_to "sign up", new_user_path %>
      <%= link_to "sign in", sign_in_path %>
    <% end %>
  </nav>
  <nav class="breadcrumbs">
    <% if signed_in? %>
      <% if defined? @cohort %>
        <%= link_to @cohort.name, @cohort %>
      <% end %>
      <% if defined? @user %>
        <%= link_to "User: #{@user.first_name} #{@user.last_name[0]}", @user %>
      <% end %>
      <% if defined? @assignment %>
        <%= link_to "Assignment: #{@assignment.title}", @assignment %>
      <% end %>
      <% if defined? @event %>
        <%= link_to "Event: #{@event.title}, #{@event.occurs_at_s}", @event %>
      <% end %>
      <%end%>
    <a class="separate">
      <% flash.each do |key, value| %>
        <span><%= value %></span>
      <% end %>
    </a>
    <% if defined? @user %>
      <%= avatar(@user, "avatar t r") %>
    <% end %>
  </nav>
  <main>
    <%= yield %>
  </main>
  <footer>
    <div><p id="mantra"></p></div>
    <div class="links">
      <a class="fa fa-code-fork" href="https://github.com/ga-dc/garnet" target="_blank"> GitHub</a>
      <a class="fa fa-ship" href="http://ci.wdidc.org/job/garnet/lastBuild/" target="_blank"> Jenkins</a>
      <%= link_to "Metrics", "/metrics", class: 'fa fa-bar-chart', target: "_blank" %>
    </div>
  </footer>
  <%= javascript_include_tag 'application' %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', 'UA-74079333-1', 'auto');
    ga('send', 'pageview');
  </script>
</body>
</html>
